<h2>Available Burgers:</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
        <li>
            {{this.id}}
            {{this.burger_name}}

            <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" id="devour">Devour!</button>
            </form>

        </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burgers:</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
        <li>
            {{this.id}}
            {{this.burger_name}}
        </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-update-form" action="burgers/insertOne" method="POST">
    <div class="form-group">
        <label for="ba">Burger Name:</label>
        <input type="text" id="burgName" name="burger_name">
    </div>
    
    <button type="submit">Add Burger!</button>
</form>
